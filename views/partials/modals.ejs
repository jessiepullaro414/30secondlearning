<div id="modal1" class="modal">
    <div class="modal-content">
        <div class="row">
            <h4>Login</h4>
            <form id="loginForm" action="/auth" method="post">
                <div class="row">
                    <div class="input-field col s12">
                        <input id="email" name='username' type="email" class="validate">
                        <label for="email">Email</label>
                    </div>
                </div>
                <div class="row">
                    <div class="input-field col s12">
                        <input id="password" type="password" type="password" class="validate">
                        <label for="password">Password</label>
                    </div>
                </div>
                <div class="row">
                    <a href="#modalreg">Register</a>
                </div>
            </form>
        </div>
    </div>
    <div class="modal-footer">
        <a href="#!" onclick="document.getElementById('loginForm').submit();"class="modal-action modal-close waves-effect waves-green btn-flat">Submit</a>
    </div>
</div>

<div id="modalreg" class="modal">
    <div class="modal-content">
        <div class="row">
            <h4>Register</h4>
            <form class="col s12">
                <div class="row">
                    <div class="input-field col s6">
                        <input id="first_name" type="text" class="validate">
                        <label for="first_name">First Name</label>
                    </div>
                    <div class="input-field col s6">
                        <input id="last_name" type="text" class="validate">
                        <label for="last_name">Last Name</label>
                    </div>
                </div>
                <div class="row">
                    <div class="input-field col s12">
                        <input id="email" type="email" class="validate">
                        <label for="email">Email</label>
                    </div>
                </div>
                <div class="row">
                    <div class="input-field col s12">
                        <input id="password" type="password" class="validate">
                        <label for="password">Password</label>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <div class="modal-footer">
        <a href="#!" class="modal-action modal-close waves-effect waves-green btn-flat">Submit</a>
    </div>
</div>
